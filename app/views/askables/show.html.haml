
- content_for :title_string do
  Ask #{ @country.to_s }:
  = @askable.body.truncate(80, :separator => ' ')

- content_for :js do
  = javascript_include_tag 'askable'

- if current_user
  - @answerable = @askable.answerables.where(country_code: @country.code, user_id: current_user.id).first
  - @is_owner = (current_user == @askable.owner)

  
#spbody
  %h4.info
    .user
      = user_country_flag_link @askable.owner, :title => "#{@askable.owner} is from #{@askable.owner.country}"
      is asking #{link_to @country, country_path(@country)}:

  #sph
    .flag= country_image @country, 'l', :size => '60x60'
    .poll
      .origin
        originally in
        %span.link
          %span.lang.orig ZH
          %span.text Chinese
    
      %h1.question.yesno
        %span.lang en
        %span(class = '#{ @askable.is_a?(Poll) && @askable.or_negative? ? "yes" : "none" }')
          = bip_body
        - if @askable.is_a?(Poll) && !@askable.simple?
          - unless @askable.or_negative?
            %span(class="yes")= best_in_place_if @is_owner, @askable, :yes, :path => country_askable_path(@country, @askable)
          %em or
          %span(class="no") #{best_in_place_if @is_owner, @askable, :no, :path => country_askable_path(@country, @askable)}?
      .langs
        available in
        %a(href='#')
          %span.lang.orig ZH
        %a(href='#')
          %span.lang en

        improve this translation of the question?

        translate into
        = succeed '?' do
          %a(href='#')
            %span.lang ar
          
    .lc    
      - if @is_owner && @askable.description.present?
        .desc= bip_desc
      - elsif @is_owner
        .add_desc= bip_desc
      - elsif @askable.description.present?
        .desc= @askable.description

      .comments_head
        = bip_coverage

        %span.sep
          |
        = link_to_function pluralize(@askable.comment_threads.size, 'comment'), '$("#askable_comments .detail").show("blind")', :id => 'ltpcs'

      = render 'askable_comments'

  #spb
    .rc  
      %ul
        #follow= render 'follow'
      
        Share to
        %li.share= link_to 'Facebook', '#'
        %li.share= link_to 'Twitter', '#'
        %li.share= link_to 'Google', '#'
    
      .polls
        %h2 More Questions
        - askables = @askable.more_askables
      
        %ul
          - askables.each do |a|
            %li= link_to a, country_askable_path(@country, a)

    
    .lc
      = render "#{ @askable.type.downcase }_answers"
            
