- @complex.each do |c|
  - if c.kind_of?(Hash) # the complex item is a list of voters
    = render 'complex_list', :item => c
  - else
    = render 'complex_item', :answerable => c

- last_answerable = @complex.last.kind_of?(Hash) ? @complex.last.values[0].last : @complex.last

- unless @is_end
  .lmv= link_to 'more answersâ€¦', country_askable_path(@country, @askable, :last_answerable => last_answerable.id), :remote => true