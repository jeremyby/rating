$("#spb .lc .ata").html("<%= j(render 'polls/edit_ballot') %>");

if ($("#ballots h2").next().length) {
  if ($('#ballot_<%= @ballot.id %>').length)
    $('#ballot_<%= @ballot.id %>').remove();

  div = $("<div><%= j (render 'polls/complex_item', :ballot => @ballot) %></div>").hide()
  $("#ballots h2").after(div)
  div.show('highlight', 800)
}