%ul.poll_list
  - polls.each do |p|
    %li
      .question
        = link_to p.question, country_poll_path(@country, p)
        
      .info  
        by
        = link_to "#{p.owner}#{country_image p.owner.country}".html_safe, user_path(p.owner), :title => "#{p.owner} is from #{p.owner.country}"
        %span= pluralize(p.votings_count, 'vote')