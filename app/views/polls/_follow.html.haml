- if current_user.blank? || !current_user.following?(@poll)
  %li.follow
    = link_to "+ Follow Question", follow_country_poll_path(@country, @poll), :method => :post, :remote => true
- else
  %li.unfollow
    %span &#10003; following
    = link_to "x", unfollow_country_poll_path(@country, @poll), :method => :post, :remote => true, :confirm => 'Stop following the question. Are you sure?'
