- content_for :actioner do
  #actioner
    #action
      %h3 Login
    #tri

= form_for @user_session do |f| 
  = f.error_messages

  %p
    = f.label :login
    = f.text_field :login

  %p
    = f.label :password 
    = f.password_field :password

  %p
    = f.check_box :remember_me 
    = f.label :remember_me

  %p
    = f.submit "Login"