
- @contenter_class = 'wider'

- content_for :js do
  = javascript_include_tag '/countries', 'country', 'world'

- content_for :title_string do
  = t 'country_title', :country_name => @country.to_s

- content_for :actioner do
  #cshead
    %h1
      = country_image(@country, 'm')
      = @country.to_s
    .search.ui-widget
      / leave an invisible placeholder to load search
      %input(value=' ')

:javascript
  aac.country_code = '#{ @country.code }'


#csmap
  #world-map      
  .head
    .flag= country_image(@country, 'o')
    .headers
      %h1
        = @country.to_s
      %h4
        - unless @country.full_name.blank?  
          = @country.full_name
        - unless @country.alias.blank?  
          (#{ content_tag 'span', @country.alias })
  .search.ui-widget
    %input(value='#{ t "search_string" }')



#csbody
  #csside.rc
    .actions
      = render 'countries/watch'
      .wiki= link_to 'Know More', @country.link, :target =>"_blank"
    
    .facts
      - random_fact = @country.random_fact
      - unless random_fact.blank?
        %h2 Did you know?

        = random_fact.html_safe
    
    .asking
      %h2 Who is asking
      .hlocs
        - countries = @country.top_asking_countries
        - countries.each do |c|
          %a(href="/#{c.slug}")
            .c
              = image_tag "/assets/flags/#{c.code}-o.png"
              %br 
                %span= c

  #csbox.lc
    = render 'sort', :active => @sort
          
    - events = @country.events.order('created_at DESC')
    
    .feed_list
      - events.each do |e|
        .feed= render "events/#{e.kind}", :event => e, :show_country => false
  
    %p= link_to "Create a new question", new_askable_path(:country => @country.code)

