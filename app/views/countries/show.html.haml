- content_for :js do
  = javascript_include_tag "poll_pack"


- title = "Ask #{@country.name}"

- content_for :title_string do
  = title

- content_for :actioner do
  .action
    %h1= title

/ 
/ - unless @country.full_name.blank? && @country.alias.blank?
/   %h2= (@country.full_name.blank? ? '':@country.full_name) + (@country.alias.blank? ? '':' (' + @country.alias + ')')
/   

/ - @mw = MediaWiki::Gateway.new('http://en.wikipedia.org/w/api.php')
/ #{ @mw.render("China") }


- if current_user
  %p= link_to "Create a question", new_country_poll_path(@country)

  %p        
    %h2 
      Answer 10 questions in 1 
      %span.italic Poll Pack
    %p= link_to "Start Now", "#", :id => "poll_pack_start"
  
  

%h2
  What is 
  %span Your Opinion
  of
  %span #{@country.name}?

- @polls = Poll.approved.where("country_code = ? or country_code = 'all'", @country.code)

= render "polls/poll_list", :polls => @polls, :country => @country