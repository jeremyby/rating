%header#page_header{:role => "banner"}
  %nav#utility
    %div
      - if current_user
        Signed in as #{current_user.name}. Not you?
        = link_to "Log out", logout_path
      - else
        = link_to "Sign up", signup_path 
        %span or
        = link_to "Log in", login_path
        / |
        / = link_to "Log in with Facebook", "/auth/facebook"
  - logo = @home_logo_display ? "logo-s" : "logo"
  = link_to image_tag("/assets/#{logo}.png"), root_url, :id => "logo", :title => "Ask a Country"
