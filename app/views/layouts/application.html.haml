!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title
      - title = yield :title_string
      = title.present?  ? title : "Ask a Country"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application" 
    = csrf_meta_tags
    = yield :js
    = yield :css
    
    = favicon_link_tag "/assets/favicon.png"
  
  %body
    = render 'layouts/header'
    
    .actioner(class='#{ @actioner_class }')
      .inner
        = yield :actioner
    
    .contenter(class='#{ @contenter_class }')
      #content.inner
        = render 'layouts/notification'

        = yield
    
    
    = render 'layouts/footer'