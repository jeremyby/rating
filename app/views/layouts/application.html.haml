!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title #{logo_string}
    = stylesheet_link_tag "application"
    = javascript_include_tag "application" 
    = csrf_meta_tags
  
  %body
    = render 'layouts/header'
    
    = yield :slider
  
    .container
      #contenter
        - if notice
          %p.notification.notice= flash[:notice]
        - if alert
          %p.notification.alert= flash[:alert]
  
        = yield
     
    = render 'layouts/footer'